<Window x:Class="CodingDojo6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodingDojo6"
        mc:Ignorable="d"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
        Title="CodingDojo6 by Sascha Böck" Height="350" Width="520">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="220"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListBox ItemsSource="{Binding Items}" SelectedItem="{Binding Selection}" Grid.ColumnSpan="2" Margin="0,0,98.6,0">
            <DataTemplate>
                <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Width="200">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding Image}" Height="60" Margin="3"/>
                        <Label Content="{Binding Description}" VerticalAlignment="Center" Margin="5,0"/>
                    </StackPanel>
                </Border>
            </DataTemplate>
        </ListBox>


    </Grid>
</Window>
